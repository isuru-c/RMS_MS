{# student/home #}

{% extends 'base.html.twig' %}

{% block side_navigation %}
    <div class="list-group">
        {% if app.user and is_granted('ROLE_STUDENT') %}
            <a href="{{ path('student_view_profile') }}" class="list-group-item"><i class="fa fa-eye"> View My Profile</i></a>
            <a href="{{ path('student_edit_profile') }}" class="list-group-item"><i class="fa fa-pencil-square-o"> Edit My Profile</i></a>
            <a href="" class="list-group-item"><i class="fa fa-calendar"> My practice schedule</i></a>
        {% endif %}
        {% if app.user and is_granted('ROLE_ADMIN') %}
            <a href="{{ path('student_new') }}" class="list-group-item"><i class="fa fa-plus"> Add new student</i></a>
            <a href="{{ path('student_view') }}" class="list-group-item"><i class="fa fa-eye"> View All Students</i></a>
        {% endif %}
        {% if app.user and is_granted('ROLE_COACH') %}
            <a href="{{ path('student_my_view') }}" class="list-group-item"><i class="fa fa-eye"> View My Students</i></a>
        {% endif %}
    </div>
{% endblock %}

{% block about %}
    This is the Students Homepage

{% endblock %}

{% block main %}
    <h1> Students
    <i class="fa fa-child"></i> </h1>
    <br>  </br>
    <img src="{{ asset('images/students.gif') }}" />
{% endblock %}
