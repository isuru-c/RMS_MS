{# sport/view #}

{% extends 'sport/home.html.twig' %}

{% block about %}
{% endblock %}

{% block main %}

    <div class="row">
        <div class="col-sm-6">
            <div class="well-sm">
                <h3>{{ sport.name }} - {{ sport.gender }}</h3>
                <h5>
                    {% if sport.minimumAge != 0 %}
                        For student above {{ sport.minimumAge }} years
                    {% else %}
                        Age limit is not specified
                    {% endif %}
                </h5>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="well-lg">
                The picture goes here
            </div>
        </div>
    </div>

    <div class="row">
        {{ sport.description }}
    </div>

    <div class="well-lg">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#achievement">Achievements</a></li>
            <li><a data-toggle="tab" href="#event">Events</a></li>
            <li><a data-toggle="tab" href="#equipment">Equipments</a></li>
            <li><a data-toggle="tab" href="#student">Students</a></li>
        </ul>

        <div class="tab-content">

            <div id="achievement" class="tab-pane fade in active">

                <div class="row">
                    <div class="well-lg">
                        Summary of achievements of {{ sport.name }} sport goes here
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <div class="item-actions">
                            <a href="" class="btn btn-sm btn-primary">
                                <i class="fa fa-eye"></i>
                                Go to achievements
                            </a>
                        </div>
                    </div>
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <div class="col-sm-3">
                            <div class="item-actions">
                                <a href="" class="btn btn-sm btn-primary">
                                    <i class="fa fa-eye"></i>
                                    Add new achievements
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>

            </div>

            <div id="event" class="tab-pane fade">

                <div class="row">
                    <div class="well-lg">
                        Summary of events of {{ sport.name }} sport goes here
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <div class="item-actions">
                            <a href="" class="btn btn-sm btn-primary">
                                <i class="fa fa-eye"></i>
                                Go to events
                            </a>
                        </div>
                    </div>
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <div class="col-sm-3">
                            <div class="item-actions">
                                <a href="" class="btn btn-sm btn-primary">
                                    <i class="fa fa-eye"></i>
                                    Add new events
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>

            </div>

            <div id="equipment" class="tab-pane fade">

                <div class="row">
                    <div class="well-lg">
                        Summary of equipments of {{ sport.name }} sport goes here
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <div class="item-actions">
                            <a href="" class="btn btn-sm btn-primary">
                                <i class="fa fa-eye"></i>
                                Go to equipments
                            </a>
                        </div>
                    </div>
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <div class="col-sm-3">
                            <div class="item-actions">
                                <a href="" class="btn btn-sm btn-primary">
                                    <i class="fa fa-eye"></i>
                                    Add new equipments
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>

            </div>

            <div id="student" class="tab-pane fade">

                <div class="row">
                    <div class="well-lg">
                        Summary of students of {{ sport.name }} sport goes here
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <div class="item-actions">
                            <a href="" class="btn btn-sm btn-primary">
                                <i class="fa fa-eye"></i>
                                Go to students
                            </a>
                        </div>
                    </div>
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <div class="col-sm-3">
                            <div class="item-actions">
                                <a href="" class="btn btn-sm btn-primary">
                                    <i class="fa fa-eye"></i>
                                    Add new student
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>

            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="well-lg">
                Every other things will be appear here
            </div>
        </div>
    </div>

{% endblock %}