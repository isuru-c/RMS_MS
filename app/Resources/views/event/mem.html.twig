{# event/mem #}

{% extends 'event/home.html.twig' %}

{% block about %}
{% endblock %}

{% block main %}

    <div class="row well">
        <h4>New member to the {{ event.title }} event</h4>
    </div>

    <div class="row ">
        <div class="well">
            <h5>Enter below details</h5>

            <div class="row ">
                <div class="well">
                    <form method="post" class="form-horizontal">
                        <div id="form">
                            <div class="form-group">
                                <label class="col-sm-2 control-label required" for="student_id">Student Id</label>
                                <div class="col-sm-10">
                                    <input id="student_id" name="student_id" type="text" required="required"
                                           class="form-control" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label required" for="remarks">Remarks</label>
                                <div class="col-sm-10">
                                    <textarea id="remarks" name="remarks" type="text" required="required"
                                           class="form-control" value=""></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">
                                    <button type="submit" class="btn-primary btn">Add</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
